@model EmployeeWebApp.ViewModels.EmployeeListViewModel
@{
    ViewBag.Title = "EmployeeList";
}

<h2>EmployeeList</h2>

<script type="text/javascript">
    
    var deleteEmp = function (Id) {
        console.log(Id);
        $.ajax({
            type: "POST",
            url: '@Url.Action("Delete","Employee")',
            data: { "Id": Id },
            success: function (response) {
                console.log(response);
            },
            error: function() {
                console.log("Error in deleting");
            }
        });
    }

</script>

<div class="table" style="margin: 0 auto">
    <table id="employeeTable" style="margin: 0 auto">
        <thead>
        <tr>
            <td>Name</td>
            <td>Email</td>
            <td>City</td>
            <td>Actions</td>
        </tr>
        </thead>
        
        <tbody>
            @foreach (var employee in Model.Employees)
            {
                <tr>
                    <td>@employee.FirstName @employee.LastName</td>
                    <td>@employee.Email</td>
                    <td>@employee.Address.City</td>
                    <td>
                        <button type="button" class="btn btn-primary" id="delete" onclick="deleteEmp('@employee.Id')">Edit</button> <button type="button" class="btn btn-primary" id="edit">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>