@model EmployeeWebApp.ViewModels.EditFormViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditEmployee</h2>
@using (Html.BeginForm("Edit", "Employee"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.FirstName)
        @Html.TextBoxFor(m => m.FirstName, new {@class = "form-control", @value = Model.FirstName})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LastName)
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" ,@value = Model.LastName })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @type = "email", @class = "form-control", @value = Model.Email })
    </div>
    <h3>Address</h3>
    <div class="form-group">
        @Html.LabelFor(m => m.StreetAddress1)
        @Html.TextBoxFor(m => m.StreetAddress1, new { @class = "form-control", @value = Model.StreetAddress1 })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.StreetAddress2)
        @Html.TextBoxFor(m => m.StreetAddress2, new { @class = "form-control" , @value = Model.StreetAddress2 })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.City)
        @Html.TextBoxFor(m => m.City, new { @class = "form-control", @value=Model.City })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.State)
        @Html.TextBoxFor(m => m.State, new { @class = "form-control", @value = Model.State })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Country)
        @Html.TextBoxFor(m => m.Country, new { @class = "form-control", @value = Model.Country })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ZipCode)
        @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control", @value = Model.ZipCode })
    </div>

    <div class="form-group">
        <button type="submit" value="update" class="btn btn-primary">Update</button>
        <button type="reset" class="btn btn-primary">Reset</button>
    </div>

}
